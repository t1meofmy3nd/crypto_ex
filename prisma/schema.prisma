datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  name     String
  balance  Float    @default(0)
  orders   Order[]
  trades   Trade[]
}

model Order {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  symbol    String
  amount    Float
  price     Float
  createdAt DateTime @default(now())
}

model Trade {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  symbol    String
  amount    Float
  price     Float
  createdAt DateTime @default(now())
}